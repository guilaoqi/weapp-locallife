/* pages/list/list.wxss */
.search{
  display:flex;
  width:100%;
  height:60rpx;
  border:1rpx solid #ccc;
  border-radius:10rpx;
  background-color: #fff;
  align-items: center;

}



.cells{
width:100%;
display: flex;
flex-direction: column;
background-color: #fff;
}
.cells .item{
flex:1;
display:flex;
padding:20rpx;
border-bottom:1rpx solid #ccc;
align-items:flex-start;
}
.cells .item image{
  height:160rpx;
  width:200rpx;
}
.cells .item .meta{
  font-size:24rpx;
  flex:1;
  margin-left:10rpx;
  color:#678
}
.cells .item .meta text{
display:block;

}
.cells .item .meta text:first-child{
  font-size:28rpx;
  color:#234;
}
.cells .item .score{
  color:#fff;
  background-color: red;
  width:80rpx;
  height:40rpx;
  border-radius: 40rpx;
  line-height: 40rpx;
  text-align:center;
  font-size:28rpx;
}
.loadmore {
  color: #888;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
}
.loadmore.loading::before {
  content: '';
  width: 40rpx;
  height: 40rpx;
  margin-top: -10rpx;
  margin-right: 10rpx;
  display: inline-block;
  vertical-align: middle;
  animation: loading 1s steps(12) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%
}

@keyframes loading {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(-360deg)
  }
}